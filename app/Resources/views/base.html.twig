<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Restart the Game{% endblock %}{% block title_suffix %} - restartthegame.com{% endblock %}</title>
        <meta name="author" content="{% block meta_author %}Olivier Haag{% endblock %}">
        {% block meta %}{% endblock %}
        <link rel="icon" href="{{ asset('favicon.ico') }}" />


        {% block stylesheet %}
            {% stylesheets
                'bundles/rtgapp/less/bootstrap.less'
                'bundles/rtgapp/less/main.less'
                filter='cssrewrite'
                output='css/main.css'
            %}
            <link rel="stylesheet" href="{{ asset_url }}" />{% endstylesheets %}
        {% endblock %}
    </head>
    {% trans_default_domain 'RTGAppBundle' %}
    <body>
        <div class="scanlines"></div>
        {{ include('RTGAppBundle:Page:menuUser.html.twig') }}
        <div class="container banner">
            <div class="row">
                <div class="col-md-3">
                    <div class="header-logo">
                        <a href="{{ path('rtg_app_page_index') }}" title="Restart the Game">
                            <img class="center-block img-responsive" src="{{ asset('bundles/rtgapp/img/logo.png') }}" alt="Restart the Game"/>
                        </a>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="title row">
                        <div class="center-block">
                            <a href="{{ path('rtg_app_page_index') }}" title="Restart the Game">Restart the Game</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div id="main-menu" class="container bloc">
            {{ render(controller('RTGAppBundle:Page:menu')) }}
        </div>
            
        {% block body %}{% endblock %}
        
        <div id="footer">
            <div class="container bloc">
                <div id="copyright">
                    {% block footer %}
                    Â© 2013-{{ "now"|date("Y") }} Restart the Game - <a href="{{ path('rtg_app_page_legalnotices') }}">{{ 'legal_notices'|trans({}, 'menu') }}</a>
                    {% endblock %}
                </div>
            </div>
        </div>
        <div class="scrollup"></div>
        <div id="fb-root"></div>
        {% block javascript %}
            {% javascripts
                'bundles/rtgapp/js/facebook-sdk.js'
                'bundles/rtgapp/js/twitter.js'
                'bundles/rtgapp/js/google-apis.js'
                'bundles/rtgapp/js/google-analytics.js'
                'bundles/rtgapp/js/jquery-1.9.1.min.js'
                'bundles/rtgapp/dist/js/bootstrap.min.js'
                'bundles/rtgapp/js/main.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
    </body>
</html>