{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
    
    {{ form_errors(form) }}
    
    <div class="form-group">
    {{ form_row(form.email, { 'attr': { 'class': 'form-control', 'placeholder': 'form.email'|trans } }) }}
    </div>
        
    <div class="form-group">
    {{ form_row(form.username, { 'attr': { 'class': 'form-control', 'placeholder': 'form.username'|trans } }) }}
    </div>
        
    <div class="form-group">
    {{ form_row(form.plainPassword.first, { 'attr': { 'class': 'form-control', 'placeholder': 'form.password'|trans } }) }}
    </div>
        
    <div class="form-group">
    {{ form_row(form.plainPassword.second, { 'attr': { 'class': 'form-control', 'placeholder': 'form.password_confirmation'|trans } }) }}
    </div>
        
    {{ form_rest(form) }}
        
    <input type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-primary" />
</form>
