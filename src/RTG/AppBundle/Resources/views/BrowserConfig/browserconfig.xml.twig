<?xml version="1.0" encoding="utf-8"?>
<browserconfig>
    <msapplication>
        <tile>
            <square70x70logo src="{{ app.request.scheme ~'://' ~ app.request.httpHost ~ asset('bundles/rtgapp/img/msapplication/tiny.jpg') }}"/>
            <square150x150logo src="{{ app.request.scheme ~'://' ~ app.request.httpHost ~ asset('bundles/rtgapp/img/msapplication/square.jpg') }}"/>
            <wide310x150logo src="{{ app.request.scheme ~'://' ~ app.request.httpHost ~ asset('bundles/rtgapp/img/msapplication/wide.jpg') }}"/>
            <square310x310logo src="{{ app.request.scheme ~'://' ~ app.request.httpHost ~ asset('bundles/rtgapp/img/msapplication/large.jpg') }}"/>
            <TileImage src="{{ app.request.scheme ~'://' ~ app.request.httpHost ~ asset('bundles/rtgapp/img/msapplication/tileimage.jpg') }}"/>
            <TileColor>#428bca</TileColor>
        </tile>
        <notification>
            <polling-uri  src="{{ url('rtg_blog_newsarticle_rss', {_format: 'xml'}) }}"/>
            <frequency>60</frequency>
            <cycle>1</cycle>
        </notification>
    </msapplication>
</browserconfig>