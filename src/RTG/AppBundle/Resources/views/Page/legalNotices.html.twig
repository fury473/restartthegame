{% extends 'RTGAppBundle::layout.html.twig' %}

{% block title %}Mentions légales{% endblock %}

{% block content %}
<h1>Mentions légales</h1>
<div itemscope itemtype="http://schema.org/Organization">
    <div class="pull-right"><img width="150" class="img-responsive" src="{{ asset('bundles/rtgapp/img/logo.png') }}" alt="{{ brand_name }}"></div>
    <h2>Editeur du site internet</h2>
    <p><strong>{{ brand_name }}</strong></p>
    <p><span itemprop="description">{{ association.description }}</span></p>
    <p>
        Adresse:
        <address itemscope itemtype="http://schema.org/PostalAddress">
            <span itemprop="streetAddress">{{ association.addressStreet }}</span><br/>
            <span itemprop="postalCode">{{ association.addressPostalCode }}</span> <span itemprop="addressLocality">{{ association.addressLocality|upper }}</span><br/>
            <span itemprop="addressCountry">{{ association.addressCountry }}</span>
            <br/>
        </address>
        <abbr title="Email">E</abbr>: <a itemprop="email" href="mailto:{{ association.email }}">{{ association.email }}</a><br/>
        <abbr title="Site Web">W</abbr>: <a itemprop="url" href="http://{{ association.website }}">{{ association.website }}</a>
    </p>
</div>

<h2>Hébergement</h2>
