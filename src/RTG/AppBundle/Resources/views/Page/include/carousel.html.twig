<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        {% for article in news %}
        <li data-target="#carousel-example-generic" data-slide-to="{{ loop.index0 }}"{% if loop.index0 == 0 %} class="active"{% endif %}></li>
        {% endfor %}
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        {% for article in news %}
        <div class="item{% if loop.index0 == 0 %}  active{% endif %}">
            {% if article.image == null %}{% set image_path = 'bundles/rtgapp/img/content/slide/blank.png' %}{% else %}{% set image_path = article.image.webPath %}{% endif %}
            <a href="{{ path('rtg_blog_newsarticle_show', { 'slug': article.slug }) }}" title="{{ article.title }}">
                <img class="center-block" src="{{ asset(image_path) }}" alt="{{ article.title }}"/>
                <div class="carousel-caption">
                    {{ article.catchPhrase }}
                </div>
            </a>
        </div>
        {% endfor %}
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
</div>