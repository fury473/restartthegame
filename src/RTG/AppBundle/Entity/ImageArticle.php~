<?php

namespace RTG\SiteBundle\Entity;

use Doctrine\ORM\Mapping as ORM;
use RTG\SiteBundle\Entity\Image;

/**
 * @ORM\Entity
 * @ORM\Table("image_article")
 */
class ImageArticle extends Image
{
    public function __toString()
    {
        return (string) $this->id;
    }
    
    protected function getUploadDir()
    {
        return 'uploads/site/img/article';
    }
    
    /**
     * @var integer $id
     *
     * @ORM\Column(name="id", type="integer")
     * @ORM\Id
     * @ORM\GeneratedValue(strategy="AUTO")
     */
    private $id;
    
    /**
     * @ORM\OneToOne(targetEntity="RTG\BlogBundle\Entity\NewsArticle", inversedBy="image")
     * @ORM\JoinColumn(name="article_id", referencedColumnName="id")
     */
    protected $article;
    
    /**
     * Get id
     *
     * @return integer
     */
    public function getId()
    {
        return $this->id;
    }

    /**
     * Set article
     *
     * @param \RTG\BlogBundle\Entity\NewsArticle $article
     * @return ImageArticle
     */
    public function setArticle(\RTG\BlogBundle\Entity\NewsArticle $article = null)
    {
        $this->article = $article;
    
        return $this;
    }

    /**
     * Get article
     *
     * @return \RTG\BlogBundle\Entity\NewsArticle 
     */
    public function getArticle()
    {
        return $this->article;
    }
}