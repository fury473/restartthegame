{% extends 'RTGBlogBundle::layout.html.twig' %}

{% block content -%}
    <h1>{{ 'title.article.new'|trans }}</h1>

    {{ form_start(form, { 'attr': { 'class': 'form' } }) }}
    
    {{ form_errors(form) }}
    
    <div class="form-group">
        <div class="checkbox">
            <label>{{ form_widget(form.featured) }} {{ 'general.featured'|trans({}, 'form') }}</label>
        </div>
    </div>
    
    <div class="form-group">
        <div class="checkbox">
            <label>{{ form_widget(form.newsletter) }} {{ 'general.newsletter'|trans({}, 'form') }}</label>
        </div>
    </div>
    
    <div class="form-group">
    {{ form_row(form.title, { 'attr': { 'placeholder': 'general.title'|trans } }) }}
    </div>
    
    <div class="form-group">
    {{ form_row(form.catchPhrase, { 'attr': { 'placeholder': 'general.catchPhrase'|trans } }) }}
    </div>
    
    <div class="form-group">
    {{ form_row(form.category) }}
    </div>
    
    <div class="form-group">
    {{ form_row(form.message, { 'attr': { 'placeholder': 'general.message'|trans } }) }}
    </div>
    
    <div class="form-group">
    {{ form_row(form.image) }}
    </div>
    
    <div class="form-group pull-right">
    {{ form_row(form.submit) }}
    </div>
    
    {{ form_end(form) }}
    
    <a href="{{ path('rtg_blog_admin_newsarticle_index') }}">
        <button class="btn btn-primary">{{ 'back_to_the_list'|trans({}, 'form') }}</button>
    </a>
{% endblock %}
