{% extends 'RTGBlogBundle::layout.html.twig' %}

{% block content -%}
    <h1>{{ 'title.article.new'|trans }}</h1>

    {{ form_start(form, { 'attr': { 'class': 'form' } }) }}
    
    {{ form_errors(form) }}
    
    <div class="checkbox">
    {{ form_row(form.featured) }}
    </div>
    
    <div class="checkbox">
    {{ form_row(form.newsletter) }}
    </div>

    <div class="form-group">
    {{ form_row(form.title, { 'attr': { 'placeholder': 'article.title'|trans } }) }}
    </div>
    
    <div class="form-group">
    {{ form_row(form.catchPhrase, { 'attr': { 'placeholder': 'article.catchPhrase'|trans } }) }}
    </div>
    
    <div class="form-group">
    {{ form_row(form.message, { 'attr': { 'placeholder': 'article.message'|trans } }) }}
    </div>
    
    <div class="form-group">
    {{ form_row(form.image) }}
    </div>
    
    <div class="form-group pull-right">
    {{ form_row(form.submit) }}
    </div>
    
    {{ form_end(form) }}
    
    <a href="{{ path('rtg_blog_admin_newsarticle_index') }}">
        <button class="btn btn-primary">{{ 'article.back_to_the_list'|trans({}, 'form') }}</button>
    </a>
{% endblock %}
