{% extends 'RTGBlogBundle::layout.html.twig' %}

{% block content -%}
    <h1>{{ 'title.category.edit'|trans }}</h1>

    {{ form_start(form, { 'attr': { 'class': 'form' } }) }}
    
    {{ form_errors(form) }}
    
    <div class="form-group">
    {{ form_row(form.title, { 'attr': { 'placeholder': 'general.title'|trans } }) }}
    </div>
    
    <div class="form-group pull-right">
    {{ form_row(form.submit) }}
    </div>
    {{ form_end(form) }}
    
    <a class="pull-right" href="{{ path('rtg_blog_admin_category_addarticles', {'slug': entity.slug}) }}">
        <button class="btn btn-success">{{ 'category.add_articles'|trans({}, 'form') }}</button>
    </a>
    
    <div class="form-group pull-right">
    {{ form(delete_form) }}
    </div>
    
    <a href="{{ path('rtg_blog_admin_category_index') }}">
        <button class="btn btn-primary">{{ 'back_to_the_list'|trans({}, 'form') }}</button>
    </a>
{% endblock %}
