{% extends 'RTGBlogBundle::layout.html.twig' %}

{% block title %}{% trans %}Competition{% endtrans %}{% endblock %}

{% block content -%}
    <h1>{{ 'title.competition_list'|trans({}, 'messages') }}</h1>

    <table class="table table-responsive">
        <thead>
            <tr>
                <th>#</th>
                <th>{{ 'article.title'|trans({}, 'form') }}</th>
                <th>{{ 'article.image'|trans({}, 'form') }}</th>
                <th>{{ 'article.created'|trans({}, 'form') }}</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ loop.index }}</td>
                <td><a href="{{ path('rtg_blog_admin_competitionarticle_edit', { 'id': entity.id }) }}">{{ entity.title }}</a></td>
                {% if entity.image is not null %}
                <td><img src="{{ entity.image.webPath|apply_filter('tb-128x128') }}" /></td>
                {% else %}
                <td>Aucune</td>
                {% endif %}
                <td><time datetime="{{ entity.created|date('c') }}">{{ entity.created|localizeddate('short', 'none')|capitalize }}</time></td>
                <td>
                <ul class="list-unstyled">
                    <li>
                        <a href="{{ path('rtg_blog_admin_competitionarticle_edit', { 'id': entity.id }) }}"><button class="btn btn-primary btn-xs">{{ 'article.edit'|trans({}, 'form') }}</button></a>
                    </li>
                    <li>
                        <a href="{{ path('rtg_blog_competitionarticle_show', { 'slug': entity.slug }) }}"><button class="btn btn-info btn-xs">{{ 'article.show'|trans({}, 'form') }}</button></a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul class="list-unstyled">
        <li>
            <a href="{{ path('rtg_blog_admin_competitionarticle_new') }}">
                <button class="btn btn-success">{{ 'article.create_a_new_entry'|trans({}, 'form') }}</button>
            </a>
        </li>
    </ul>
{% endblock %}
