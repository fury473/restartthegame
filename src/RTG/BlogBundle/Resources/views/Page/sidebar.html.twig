<aside class="section">
    <div class="bloc">
        <header>
            <h3>{% trans %}Latest Comments{% endtrans %}</h3>
        </header>
        {% for comment in latestComments %}
            <article class="comment">
                <header>
                    <p class="small"><span class="highlight">{{ comment.user }}</span> {% trans %}commented on{% endtrans %}
                        <a href="{{ path('rtg_blog_newsarticle_show', { 'slug': comment.article.slug }) }}#comment-{{ comment.id }}">{{ comment.article.title }}</a>
                        [<em><time datetime="{{ comment.created|date('c') }}">{{ comment.created|localizeddate('medium', 'none') }} {% trans %}at{% endtrans %} {{ comment.created|localizeddate('none', 'short') }}</time></em>]
                    </p>
                </header>
                <p>{{ comment.comment }}</p>
                </p>
            </article>
        {% else %}
            <p>{% trans %}There are no recent comments{% endtrans %}</p>
        {% endfor %}
    </div>
</aside>