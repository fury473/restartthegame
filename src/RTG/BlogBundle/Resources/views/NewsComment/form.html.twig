<form action="{{ path('rtg_blog_newscomment_create', { 'article_id' : comment.article.id } ) }}" method="post" {{ form_enctype(form) }} class="form media">
    {{ form_errors(form) }}
    
    <div class="pull-left">
    {% if user.avatar is not null %}
        <img src="{{ user.avatar.webPath|apply_filter('tb-48x48') }}" alt="{{ user }}"/>
    {% else %}
        <img src="{{ gravatar(user.email, 48) }}" alt="{{ user }}"/>
    {% endif %}
    </div>
    
    <div class="form-group media-body">
        {{ form_row(form.comment) }}
    </div>

    {{ form_rest(form) }}

    <div class="form-group clearfix">
        <button type="submit" class="btn btn-primary pull-right">{% trans %}Comment{% endtrans %}</button>
    </div>
</form>